<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.hp.oreo.activities.OreoContatos"
    android:background="#f2f4e0">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/corBranca"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:navigationIcon="@color/corBranca"
        app:title="CONTATOS">

        <SearchView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal"
            app:goIcon="@android:drawable/ic_menu_search" />

    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/lvContatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>

