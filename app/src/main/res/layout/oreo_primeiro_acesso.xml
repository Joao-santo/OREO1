<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="com.example.hp.oreo.activities.OreoPrimeiroAcesso">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarPrimeiroAcesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="PRIMEIRO ACESSO"
            android:gravity="center"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/txtPrimeiroAcessoCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:textColor="@android:color/background_dark"
            android:typeface="serif"
            android:layout_weight="0.03" />

        <EditText
            android:id="@+id/edtPrimeiroAcessoCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite seu CPF"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtPrimeiroAcessoSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Senha"
            android:textColor="@android:color/background_dark"
            android:typeface="serif" />

        <EditText
            android:id="@+id/edtPrimeiroAcessoSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/txtPrimeiroAcessoConfirmaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="Confirmar senha"
            android:textColor="@android:color/background_dark"
            android:typeface="serif" />

        <EditText
            android:id="@+id/edtPrimeiroAcessoConfirmaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnConfirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05"
            android:text="Confirmar"
            android:typeface="monospace" />
    </LinearLayout>
</RelativeLayout>

