<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtViewNome"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="59dp"
        android:textSize="20sp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="-12dp" />

    <TextView
        android:id="@+id/txtViewSetor"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="10sp"
        android:layout_alignStart="@+id/txtViewFuncao"
        android:layout_below="@+id/txtViewFuncao"
        android:layout_marginBottom="-1dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="Setor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtViewFuncao"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtViewFuncao"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/txtViewNome"
        android:layout_below="@+id/txtViewNome"
        android:layout_marginBottom="-1dp"
        android:textSize="10sp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:hint="Funcao"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@+id/txtViewSetor"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_user" />


</android.support.constraint.ConstraintLayout>